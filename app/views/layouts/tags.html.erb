<% content_for :content do %>
<div class="clearfix">
	<div class="left">
		<%= yield %>
	</div>
	<div class="right">
		<nav class="my_account">
			<%= link_to 'My Account', user_path(current_user)%>
			<br />
			<%= link_to_if user_signed_in?, 'Log out', destroy_user_session_path %>
			<br/>
			<%= link_to ('Create New Post', new_post_path) if current_user.can_post %>
		</nav>
		<nav class="archives">
		<h4>Archives</h4>
		<ul>
			<%= render :partial => 'archive_link', :collection => @archives %>
		</ul>
		</nav>
		<nav class="tags">
		<h4>Tags</h4>
		<ul>
			<%= render :partial => 'tag_link', :collection => @tags %>
		</ul>
		</nav>
	</div>
</div>
<% end %>
<%= render :file => 'layouts/application' %>