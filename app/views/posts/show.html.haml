- @title = @post.title

= render :partial => @post

- if @post.tags.any?
  %p
    Tags:
    = @post.tags.map{ |t| link_to t.tag, tag_path(t) }.join(', ').html_safe

- if @post.allowed_to_edit_or_delete?(current_user)
  %p
    = link_to 'Edit', edit_post_path(@post)
    |
    = link_to 'Delete', post_path(@post), :method => :delete, :confirm => 'Are you sure?'

%hr

#comments
  %h3= pluralize @post.comments.size, 'comment'
  = render :partial => 'comment', :collection => @post.comments, :spacer_template => 'shared/spacer'

  %hr

  = form_for @comment, :url => add_comment_post_path(@post), :remote => true do |f|
    %fieldset
      .control-group
        = f.label :body, 'Add your comment'
        .controls~ f.text_area :body, :rows => 6, :class => 'span12'
      .control-group.clearfix
        .controls= submit_tag "Post Comment", :class => 'btn btn-primary btn-large pull-right'

