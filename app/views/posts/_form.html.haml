= form_for(@post) do |f|
	- if @post.errors.any?
		#error_explanation
			%h3<
				#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:
			%ul
				-  @post.errors.full_messages.each do |msg|
					%li= msg
	
	%p
		= f.label :title, "This post's title"
		%br
		= f.text_field :title

	%p	
		= f.label :body, "This post's contents"
		%br
		= f.text_area :body

	%p
		= label_tag :tags_list, "This post's tags"
		%br
		= text_field_tag :tags_list, (@post.tags.map{|t| t.tag}.join(", ") if @post.tags.any?)

	%p
		= label_tag :video, "Embed a video"
		%br
		= text_area_tag :video, (@post.videos.first.embed if @post.videos.any?)
		
	= render :partial => 'form_photo', :collection => @post.images, :as => :photo

	.actions
		= f.submit 

