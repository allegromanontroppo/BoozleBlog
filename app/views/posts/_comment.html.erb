<div class="comment">
	<div class="clearfix">
		<% link_to(comment.user) do %>
			<%= image_tag "/images/avatars/#{comment.user.avatar}", :class => "avatar clearfix" %>
		<% end %>
		<%= simple_format auto_link comment.body %>
	</div>
	<div class="small">
		<p>
			Comment posted on <time datetime="<%= comment.created_at %>"><%= comment.date_pretty %></time> by: <%= link_to comment.user.name, comment.user %>
		</p>
	</div>
</div>