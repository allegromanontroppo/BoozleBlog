<div class="synopsis" id="post_<%= post.id %>">
	<h3><%= link_to post.title, post %></h3>
	<p><time datetime="<%= post.created_at %>"><%= post.date_pretty %></time></p>
	<article>
		<%= simple_format truncate post.body, :length => 150 %>
	</article>
	<div class="small">
		<p>
			<%= link_to "View", post, :class => 'view' %>
			<% if current_user.is_super_user || post.user_id == current_user.id %>
				<%= link_to 'Edit', edit_post_path(post) %>
				<%= link_to 'Delete', post, :method => :delete, :confirm => "Are you sure?", :remote => true %>
			<% end %>
		</p>
		<p>
			Comments: <%= link_to post.comments.count, post_path(post, :anchor => 'comments') %> | 
			Posted by: <%= link_to post.user.name, post.user %>
		</p>
		<p>
			Tags: <%= raw tags_list(post.tags)%> 
		</p>
	</div>
</div>